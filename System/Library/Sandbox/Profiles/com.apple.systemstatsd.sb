(version 1)
(deny default)
(import "bsd.sb")

(allow file-read* (literal "/private/var/db/systemstats"))
(allow file-read* file-write*
	(literal "/private/var/db/systemstats/snapshots.db")
	(literal "/private/var/db/systemstats/snapshots.db-journal")
	(literal "/private/var/db/systemstats/snapshots.db-shm")
	(literal "/private/var/db/systemstats/snapshots.db-wal"))
